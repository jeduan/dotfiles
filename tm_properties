# General settings.
showInvisibles      = true
spellChecking       = true

# Includes
mExtraIncludes = ".gitignore,.gitkeep,.envrc"
fileBrowserGlob  = "{*,$mExtraIncludes}"
include = "{$include,$mExtraIncludes}"

# Excludes
mExtraExcludes = "node_modules,bower_components"
excludeInFileChooser  = "{$excludeInFileChooser,$mExtraExcludes}"
excludeInFolderSearch = "{$excludeInFolderSearch,$mExtraExcludes}"
excludeDirectories = "$mExtraExcludes"

[ text ]
softWrap            = true
wrapColumn          = 80
softTabs            = true
tabSize             = 2

[ text.html.markdown ]
softWrap            = true
wrapColumn          = "Use Window Frame"
softTabs            = false
tabSize             = 4

[ text.plain ]
softWrap            = true
wrapColumn          = "Use Window Frame"
softTabs            = false
tabSize             = 4

[ source ]
softWrap            = true
softTabs            = true
tabSize             = 2

[ source.plist ]
softTabs            = false
tabSize             = 4

[ source.py ]
softTabs            = false
tabSize             = 4

[ source.tm-properties ]
spellChecking       = false
